<%= form_for @certified, html: { role: 'form', multipart: true } do |f| %>
  <div class="from-group">
    <%= f.label :event %>
    <% if edit %>
      <%= @certified.event.title %>
    <% else %>
      <%= f.select :event_id, @events.map { |p| [ p.title, p.id ] }, { include_blank: true }, { class: 'form-control'} %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :background_url  %>
    <br/>
    <%= f.hidden_field :background_url, role: "uploadcare-uploader", 'data-preview-step' => "false", 'data-images-only' => "true", 'data-crop'=> "1024x768 minimum", 'data-clearable' => "true",  class: 'form-control' %>

  </div>
  <div class="form-group">
    <%= f.label :name_color  %>
    
    <%= f.text_field :name_color, class: 'form-control color', style: "width:100px;"  %>

  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t(:cancel, :default => t("helpers.links.cancel")), certifieds_path, class: 'btn btn-danger' %>
<% end %>


